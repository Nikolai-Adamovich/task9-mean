extends layout

block content
  h1 Edit News
  div(class='form')
    div(class='form__field')
      input(value=`${news.title}`, id='title', class='form__input', type='text', name='title', placeholder='Title', required, focus)
    div(class='form__field')
      input(value=`${news.slug}`, id='slug', class='form__input', type='text', name='slug', placeholder='Slug', required)
    div(class='form__field')
      label
        div(class='form__image-preview form__image-preview--filled' style=`background-image: url(${news.imgUrl});`)
          span  Click to upload image
        input(id='image', type='file', name='image', accept='image/x-png,image/jpeg', required, hidden)
    div(class='form__field')
      textarea(id='content', type='text', name='content', placeholder='Content', required) #{news.content}
    div(class='form__field')
      button(id='edit_button', class='form__button') Save
  // Send data along with page render
  script.
    const newsId = '#{news._id}';