extends layout

block content
  h1 Delete News
  h2(class="heading heading--center") Are you sure you want to delete this news?
  ul(class='news')
    li(class='news__item news__item--center')
      article(class='news__article')
        h2(class='news__title') #{news.title}
        div(class='news__main')
          div(class='news__image' style=`background-image: url(${news.imgUrl});`)
          div(class='news__content') #{news.content}
        footer(class='news__footer')
          div(class='news__author') #{news.author}
          div(class='news__published-at') #{news.publishedAt}
          div(class='news__updated-at') #{news.updatedAt}
        div(class='form__field')
          button(id='delete_button', class='form__button') Confirm
  // Send data along with page render
  script.
    const newsId = '#{news._id}';